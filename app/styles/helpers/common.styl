// General body styles

.page
	background-color #eeeeee
	font-display swap
	font-family $sR
	font-size 15px
	color #5a5a5a

img
	display block
	max-width 100%
	height auto

// Container

.in
	margin auto
	padding-right 15px
	padding-left 15px
	min-width 280px
	max-width 1200px

// Links

a:link
	text-decoration none


// Buttons

.button
	border 2px solid #0084ed
	padding-top 9px
	padding-right 20px
	padding-bottom 11px
	padding-left 20px
	height 32px
	color #FFF
	font-family $sH
	font-size 12px
	line-height 1
	text-transform uppercase
	border-radius 16px
	letter-spacing tracking(75)
	&_active,
	&:hover
		border 2px solid rgba(3, 169, 244, 0.12)
		box-shadow 0 14px 30px rgba(44, 53, 83, 0.06), 0 8px 16px rgba(44, 53, 83, 0.06)
		background-image linear-gradient(to right, #0089df 0%, #106afe 100%), linear-gradient(45deg, #0012f4 0%, #34eafa 100%)

// Titles

.title
	position relative
	color #000
	font-size 30px
	font-family $sM
	line-height 1.6
	&:after
		position absolute
		z-index -1
		bottom -10px
		left 50%
		content attr(data-title)
		color #fff
		font-size 150px
		font-family $sH
		text-transform uppercase
		transform translateX(-50%)



// wysiwyg editor styles

.wysiwyg
	p
		margin-bottom 30px
		line-height 1.428
		color #5a5a5a

	img
		max-width 100%
		height auto


