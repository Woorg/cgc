// General body styles
.page
	font-display swap
	font-size 19px
	color #212121
	transition font-size .3s ease
	+selection()
		background #212121
		color #fff
	tr(all .3s ease)
.page_inner
	padding-top 62px
// Container

.in
	margin auto
	padding-right 15px
	padding-left 15px
	min-width 280px
	max-width 1170px

// Sticky footer
html, body
	height 100%

* html .main
	height 100%

.page__buffer
	clear both

// Links

a:link
	text-decoration none


// Titles

.title-h1
	font-size 80px
	line-height 1.4
	transition all .2s ease
	+r($l)
		font-size 66px
	+r($t)
		font-size 55px
	+r($m)
		font-size 29px

.title-h2
	font-size 69px
	line-height 1.4
	transition all .2s ease
	+r($t)
		font-size 41px
.title-h3
	font-size 29px
	line-height 1.7
	text-transform none
	letter-spacing tracking(150)
	transition all .2s ease

.title-h4
	font-size 19px
	line-height 1.7
	text-transform lowercase
	transition all .2s ease

.title-404
	margin-bottom 30px

// General buttons

.button
	border 1px solid #fff
	display inline-block
	vertical-align top
	background transparent
	color #FFF
	font-size 15px
	line-height 1
	text-decoration none
	text-transform none
	letter-spacing tracking(150)
	border-radius 6px
	transition all .2s ease
	opacity 1
	will-change all
	text-align center



// wysiwyg editor styles

.wysiwyg
	line-height 1.7
	text-align left
	color #212121
	+r($m)
		font-size 13px
	h1,
	h2,
	h3,
	h4,
	h5,
	h6
		margin-bottom 40px
		line-height 1.4
		letter-spacing tracking(150)
	h1
		font-size (69px/1.2)
	h2
		position relative
		margin-bottom 30px
		font-size 69px
		letter-spacing tracking(0)
		+r($m)
			font-size 22px
	h3
		font-size 29px
		letter-spacing tracking(0)
	h4
		font-size 23px
		letter-spacing tracking(0)
	h5
		font-size 19px
		letter-spacing tracking(0)
	p
		margin-bottom 25px
		line-height 1.7
		text-align left
		color #212121
		+r($m)
			font-size 13px
	pre
		margin-bottom 40px
		padding-bottom 25px
		+r($m)
			font-size 15px
	// em,
	// code
	// 	font-family $ar
	code
		padding-top 2px
		padding-right 2px
		padding-left 2px
		padding-bottom 2px
		background #F5F2F0
	a
		border-bottom 1px solid lighten(#01579B, 55)
		line-height 1.56
		color #01579B
		transition all .2s ease
		&:hover
			border-bottom 1px solid transparent
	ul,
	ol
		margin-bottom 40px
	li
		position relative
		margin-bottom 15px
		padding-left 30px
		font-size 18px
		font-weight 200
		line-height 1.56
		text-align left
		color #212121
		+r($m)
			font-size 15px
		&:after
			position absolute
			top 50%
			left 0
			margin-top -7px
			width 14px
			height 10px
			content ''
			background url('../images/general/list.svg') no-repeat
	img
		max-width 100%
		height auto


