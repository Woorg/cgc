.about
	display block
	overflow hidden
	&__in
		@extends .in
		max-width 630px
		padding-top 136px
		padding-bottom 82px
	&__title
		position relative
		margin-bottom 23px
		text-align center
		color #000
		font-size 30px
		font-family $sM
		&:after
			position absolute
			z-index -2
			bottom -10px
			left 50%
			content attr(data-title)
			color #fff
			font-size 150px
			font-family $sH
			text-transform uppercase
			transform translateX(-50%)
		&:before
			position absolute
			z-index -1
			bottom -10px
			left 50%
			width 100%
			height 150px
			content ''
			background transparent linear-gradient(to top, #eee 0%, transparent 40%)
			transform translateX(-50%)
	&__text
		@extends .wysiwyg
		text-align center
