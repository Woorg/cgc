.advantages
	display block
	&__in
		@extends .in
		padding-top 77px
		padding-bottom 77px
	&__row
		margin-bottom 108px
		display flex
		flex-flow row wrap
		justify-content space-between
		align-items flex-start
		&:nth-child(odd)
			.advantages__content
				padding-left 70px
				padding-right 70px
			.advantages__title
				margin-bottom 44px
				&:after
					bottom -50px
					left 29px
					transform translateX(0)
		&:nth-child(even)
			align-items flex-end

			.advantages__content
				padding-right 70px
			.advantages__title
				margin-bottom 32px
				text-align right
				&:after
					bottom -50px
					right 30px
					transform translateX(0)
			.advantages__image
				padding-left 170px
				order -1


		&:last-child
			margin-bottom 0
	&__content
		width 770px
	&__title
		@extends .title
	&__text
		@extends .wysiwyg
	&__image
		width 400px
