.market
	display block
	&__in
		@extends .in
		padding-top 89px
		padding-bottom 89px
		max-width 630px
	&__title
		@extends .title
		margin-bottom 24px
		text-align center
		&:after
			z-index -2
			bottom -45px
		&:before
			position absolute
			z-index -1
			bottom 8px
			left 50%
			width 100%
			height 150px
			content ''
			background transparent linear-gradient(to top, #eee 0%, transparent 40%)
			transform translateX(-50%)
	&__text
		@extends .wysiwyg
		text-align center
