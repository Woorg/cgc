.video
	display block
	background-color #eeeeee
	overflow hidden
	&__in
		@extends .in
		padding-top 64px
		padding-bottom 42px
	&__player-w
		position relative
		padding-top 42.735%
		background #fff
		&:after
			position absolute
			bottom -28px
			left 50%
			content ''
			width 1866px
			height 28px
			background url('../images/general/video-shadow.png') 50% 0 no-repeat
			transform translateX(-50%)
	&__player
		position absolute
		top 0
		left 0
		padding-bottom 10px
		width 100%
		height 100%
		background #ffffff

	&__player-button
		position absolute
		top 50%
		left 50%
		border none
		background transparent
		transform translate(-50%, -50%)

	&__player-icon
		width 64px
		height 64px
		fill #003d57
		tr(all .3s ease)
		&:hover
			fill darken(#003d57, 5)
			tr(all .3s ease)



