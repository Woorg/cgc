.header
	display block
	background-image linear-gradient(-41deg, #020411 0%, #2181bd 100%), radial-gradient(circle 672px at center -377.15%, #0c0e3d 0%, #0c062b 100%)
	&__in
		@extends .in
		padding-bottom 88px
	&__top
		padding-top 20px
		padding-bottom 140px
		display flex
		flex-flow row wrap
		justify-content flex-start
		align-items center
	&__logo
		margin-right 30px

	&__controls
		margin-left auto


	&__body
		margin-top -80px
	&__coin
		margin-bottom 160px

	&__coin-fullname
		position relative
		margin-top -120px
		color #fff949
		font-size 30px
		line-height 1
		font-family $sL
		text-align center
		&:after
			position absolute
			top -30px
			left 50%
			content ''
			width 984px
			height 232px
			background url('../images/general/cgc-shadow.png') 50% 0 no-repeat
			transform translateX(-50%)
	&__text
		text-align center
		color #fff
		font-size 18px
		line-height 1.333
		p
			margin-bottom 54px


	&__counter
		margin-bottom 80px

// 	&__rating


.logo
	width 219px

.nav
	&__list
		display flex
		flex-flow row wrap
		justify-content flex-start
		align-items center
	&__item
		margin-right 16px

	&__link
		font-size 14px
		font-family $sH
		color #dee0ee
		text-transform uppercase

.lang
	position relative
	width 48px
	overflow hidden
	&:after
		position absolute
		top calc(50%+2px)
		right 0
		content ''
		retinaSprite($sub_nav_group)
		transform translateY(-50%)
	&__select
		position relative
		border none
		width 136%
		background transparent
		color #dee0ee
		font-family $sH
		text-transform uppercase
		cursor pointer
	option
		border none
		background linear-gradient(-41deg, #020411 0%, #2181bd 100%), radial-gradient(circle 672px at center -377.15%, #0c0e3d 0%, #0c062b 100%)
		background #2181bd
		// color #5a5a5a
		color #fff
		font-size 14px



.h-controls
	display flex
	flex-flow row wrap
	justify-content flex-start
	align-items center
	&__link
		margin-right 16px
		@extends .button
		&:last-child
			margin-right 0
	&__link_active
		padding-left 10px
		padding-right 10px


.counter
	text-align center
	color #fff
	&__title
		margin-bottom 20px
		font-size 24px
		line-height 1
	&__list
		margin auto
		width 380px
		display flex
		flex-flow row wrap
		justify-content flex-start
		align-items flex-start
	&__item
		margin-right 20px
		margin-bottom 10px
		font-family $sM
		text-align center
		&:last-child
			margin-right 0
	&__num-w
		padding-top 16px
		width 80px
		height 80px
		background rgba(255,255,255, .49)
		border-radius 10px
		box-shadow 2px 2px 7px rgba(31, 51, 118, 0.24)

	&__num
		text-align center
		display block
		color #FFF
		font-family $sM
		font-size 48px
	&__item-title
		position relative
		bottom -10px
		text-transform uppercase
		line-height 1


.rating
	display flex
	flex-flow row wrap
	justify-content center
	align-items center
	&__item
		position relative
		margin-right 40px
		height 80px
		&:last-child
			margin-right 0
	&__icon
		position absolute
		top 0
		left 0
	&__item_1
		width 194px
		.rating__icon
			retinaSprite($rating_icon_1_group)
	&__item_2
		width 184px
		.rating__icon
			retinaSprite($rating_icon_2_group)
	&__item_3
		width 146px
		padding-top 8px
		.rating__icon
			top 8px
			retinaSprite($rating_icon_3_group)
	&__item_4
		width 122px
		.rating__icon
			retinaSprite($rating_icon_4_group)
	&__item_5
		width 118px
		.rating__icon
			margin-top -7px
			retinaSprite($rating_icon_5_group)
	&__item_6
		width 206px
		.rating__icon
			retinaSprite($rating_icon_6_group)
	&__text
		position absolute
		bottom 0
		left 50%
		margin-top auto
		padding-top 10px
		height 40px
		vertical-align baseline
		color #f3ff92
		font-size 18px
		font-family $sM
		text-transform uppercase
		text-align center
		transform translateX(-50%)
		white-space nowrap
